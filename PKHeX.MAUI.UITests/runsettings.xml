<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <RunConfiguration>
    <!-- Test execution settings -->
    <MaxCpuCount>1</MaxCpuCount>
    <ResultsDirectory>../TestResults</ResultsDirectory>
    <TargetFramework>net8.0</TargetFramework>
    <TestAdaptersPaths>.</TestAdaptersPaths>
    <DisableAppDomain>false</DisableAppDomain>
    <DisableParallelization>true</DisableParallelization>
    <TreatTestAdapterErrorsAsWarnings>false</TreatTestAdapterErrorsAsWarnings>
  </RunConfiguration>

  <!-- MSTest configuration -->
  <MSTest>
    <Parallelize>
      <Workers>1</Workers>
      <Scope>none</Scope>
    </Parallelize>
    <ForcedLegacyMode>false</ForcedLegacyMode>
    <SettingsFile>TestSettings.xml</SettingsFile>
  </MSTest>

  <!-- xUnit configuration for UI tests -->
  <xUnit>
    <MaxParallelThreads>1</MaxParallelThreads>
    <ParallelizeAssembly>false</ParallelizeAssembly>
    <ParallelizeTestCollections>false</ParallelizeTestCollections>
  </xUnit>

  <!-- Data collection for screenshots and logs -->
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat code coverage" uri="datacollector://Microsoft/CodeCoverage/2.0" assemblyQualifiedName="Microsoft.VisualStudio.CodeCoverage.DynamicCoverageDataCollector, Microsoft.VisualStudio.CodeCoverage.DynamicCoverageDataCollector, Version=1.0.0.0, Culture=neutral, PublicKeyToken=b03f5f7f11d50a3a">
        <Configuration>
          <Format>cobertura</Format>
          <Exclude>[*]*.UITests.*</Exclude>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>

  <!-- Test environment configuration -->
  <TestRunParameters>
    <Parameter name="UITestTimeout" value="60000" />
    <Parameter name="AppiumTimeout" value="30000" />
    <Parameter name="ScreenshotOnFailure" value="true" />
    <Parameter name="CI" value="true" />
  </TestRunParameters>
</RunSettings>
