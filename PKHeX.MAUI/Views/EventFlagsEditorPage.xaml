<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PKHeX.MAUI.Views.EventFlagsEditorPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Event Flags Editor"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Label Grid.Row="0" 
               Text="Event Flags Editor" 
               FontSize="24" 
               FontAttributes="Bold" 
               HorizontalOptions="Center"/>

        <!-- Content -->
        <StackLayout Grid.Row="1" Spacing="20" VerticalOptions="Center">
            <Label x:Name="StatusLabel" Text="Event Flags Editor" HorizontalOptions="Center"/>
            <Label x:Name="InfoLabel" Text="Game progression control" HorizontalOptions="Center"/>
            <Label Text="⚠️ Full event flags editor implementation coming soon" 
                   HorizontalOptions="Center" 
                   TextColor="Orange"/>
        </StackLayout>

        <!-- Footer -->
        <Button Grid.Row="2"
                Text="Back"
                BackgroundColor="{DynamicResource PrimaryColor}"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"
                Clicked="OnBackClicked"/>
    </Grid>
</ContentPage>
