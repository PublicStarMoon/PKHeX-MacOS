<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PKHeX.MAUI.Views.PokemonEditorPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Pokemon Editor">

    <ScrollView>
        <StackLayout Padding="10" Spacing="10">
            
            <!-- Header -->
            <Grid BackgroundColor="LightBlue" Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" Text="← Back" Clicked="OnBackClicked"/>
                <Label Grid.Column="1" x:Name="HeaderLabel" Text="Pokemon Editor" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Button Grid.Column="2" Text="Save" Clicked="OnSaveClicked" BackgroundColor="LightGreen"/>
            </Grid>

            <!-- Basic Information -->
            <Frame BackgroundColor="LightYellow" Padding="10">
                <StackLayout>
                    <Label Text="Basic Information" FontSize="16" FontAttributes="Bold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Text="Species ID:" VerticalOptions="Center"/>
                        <Entry Grid.Row="0" Grid.Column="1" x:Name="SpeciesEntry" Keyboard="Numeric" TextChanged="OnSpeciesChanged"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Text="Nickname:" VerticalOptions="Center"/>
                        <Entry Grid.Row="1" Grid.Column="1" x:Name="NicknameEntry" TextChanged="OnNicknameChanged"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Text="Level:" VerticalOptions="Center"/>
                        <Entry Grid.Row="2" Grid.Column="1" x:Name="LevelEntry" Keyboard="Numeric" TextChanged="OnLevelChanged"/>
                        
                        <Label Grid.Row="3" Grid.Column="0" Text="Nature ID:" VerticalOptions="Center"/>
                        <Entry Grid.Row="3" Grid.Column="1" x:Name="NatureEntry" Keyboard="Numeric" TextChanged="OnNatureChanged"/>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- IVs -->
            <Frame BackgroundColor="LightGreen" Padding="10">
                <StackLayout>
                    <Label Text="Individual Values (IVs)" FontSize="16" FontAttributes="Bold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Text="HP IV:" VerticalOptions="Center"/>
                        <Entry Grid.Row="0" Grid.Column="1" x:Name="HPEntry" Keyboard="Numeric" TextChanged="OnHPChanged"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Text="ATK IV:" VerticalOptions="Center"/>
                        <Entry Grid.Row="1" Grid.Column="1" x:Name="AttackEntry" Keyboard="Numeric" TextChanged="OnAttackChanged"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Text="DEF IV:" VerticalOptions="Center"/>
                        <Entry Grid.Row="2" Grid.Column="1" x:Name="DefenseEntry" Keyboard="Numeric" TextChanged="OnDefenseChanged"/>
                        
                        <Label Grid.Row="3" Grid.Column="0" Text="SpA IV:" VerticalOptions="Center"/>
                        <Entry Grid.Row="3" Grid.Column="1" x:Name="SpAttackEntry" Keyboard="Numeric" TextChanged="OnSpAttackChanged"/>
                        
                        <Label Grid.Row="4" Grid.Column="0" Text="SpD IV:" VerticalOptions="Center"/>
                        <Entry Grid.Row="4" Grid.Column="1" x:Name="SpDefenseEntry" Keyboard="Numeric" TextChanged="OnSpDefenseChanged"/>
                        
                        <Label Grid.Row="5" Grid.Column="0" Text="SPE IV:" VerticalOptions="Center"/>
                        <Entry Grid.Row="5" Grid.Column="1" x:Name="SpeedEntry" Keyboard="Numeric" TextChanged="OnSpeedChanged"/>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- Moves -->
            <Frame BackgroundColor="LightCoral" Padding="10">
                <StackLayout>
                    <Label Text="Moves (IDs)" FontSize="16" FontAttributes="Bold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Text="Move 1 ID:" VerticalOptions="Center"/>
                        <Entry Grid.Row="0" Grid.Column="1" x:Name="Move1Entry" Keyboard="Numeric" TextChanged="OnMove1Changed"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Text="Move 2 ID:" VerticalOptions="Center"/>
                        <Entry Grid.Row="1" Grid.Column="1" x:Name="Move2Entry" Keyboard="Numeric" TextChanged="OnMove2Changed"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Text="Move 3 ID:" VerticalOptions="Center"/>
                        <Entry Grid.Row="2" Grid.Column="1" x:Name="Move3Entry" Keyboard="Numeric" TextChanged="OnMove3Changed"/>
                        
                        <Label Grid.Row="3" Grid.Column="0" Text="Move 4 ID:" VerticalOptions="Center"/>
                        <Entry Grid.Row="3" Grid.Column="1" x:Name="Move4Entry" Keyboard="Numeric" TextChanged="OnMove4Changed"/>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- Special Properties -->
            <Frame BackgroundColor="LightPink" Padding="10">
                <StackLayout>
                    <Label Text="Special Properties" FontSize="16" FontAttributes="Bold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Text="Shiny:" VerticalOptions="Center"/>
                        <CheckBox Grid.Row="0" Grid.Column="1" x:Name="ShinyCheckBox" CheckedChanged="OnShinyChanged"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Text="Egg:" VerticalOptions="Center"/>
                        <CheckBox Grid.Row="1" Grid.Column="1" x:Name="EggCheckBox" CheckedChanged="OnEggChanged"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Text="Held Item ID:" VerticalOptions="Center"/>
                        <Entry Grid.Row="2" Grid.Column="1" x:Name="HeldItemEntry" Keyboard="Numeric" TextChanged="OnHeldItemChanged"/>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- Tools -->
            <Frame BackgroundColor="LightGray" Padding="10">
                <StackLayout>
                    <Label Text="Tools" FontSize="16" FontAttributes="Bold"/>
                    <Button Text="Heal Pokemon" Clicked="OnHealClicked" BackgroundColor="LightGreen"/>
                    <Label x:Name="StatusLabel" Text="" FontSize="12" TextColor="Green"/>
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>

</ContentPage>