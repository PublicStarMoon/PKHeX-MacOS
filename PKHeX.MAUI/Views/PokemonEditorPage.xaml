<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PKHeX.MAUI.Views.PokemonEditorPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Pokemon Editor">

    <ScrollView>
        <StackLayout Padding="10" Spacing="10">
            
            <!-- Header -->
            <Grid BackgroundColor="LightBlue" Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" Text="← Back" Clicked="OnBackClicked"/>
                <Label Grid.Column="1" x:Name="HeaderLabel" Text="Pokemon Editor" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Button Grid.Column="2" Text="Save" Clicked="OnSaveClicked" BackgroundColor="LightGreen"/>
            </Grid>

            <!-- Basic Information -->
            <Frame BackgroundColor="LightYellow" Padding="10">
                <StackLayout>
                    <Label Text="Basic Information" FontSize="16" FontAttributes="Bold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Text="Species ID:" VerticalOptions="Center"/>
                        <Entry Grid.Row="0" Grid.Column="1" x:Name="SpeciesEntry" Keyboard="Numeric" TextChanged="OnSpeciesChanged"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Text="Nickname:" VerticalOptions="Center"/>
                        <Entry Grid.Row="1" Grid.Column="1" x:Name="NicknameEntry" TextChanged="OnNicknameChanged"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Text="Level:" VerticalOptions="Center"/>
                        <Entry Grid.Row="2" Grid.Column="1" x:Name="LevelEntry" Keyboard="Numeric" TextChanged="OnLevelChanged"/>
                        
                        <Label Grid.Row="3" Grid.Column="0" Text="Nature ID:" VerticalOptions="Center"/>
                        <Entry Grid.Row="3" Grid.Column="1" x:Name="NatureEntry" Keyboard="Numeric" TextChanged="OnNatureChanged"/>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- IVs and EVs -->
            <Frame BackgroundColor="LightGreen" Padding="10">
                <StackLayout>
                    <Label Text="Individual Values (IVs) &amp; Effort Values (EVs)" FontSize="16" FontAttributes="Bold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="1" Text="IVs (0-31)" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Label Grid.Row="0" Grid.Column="2" Text="EVs (0-252)" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Text="HP:" VerticalOptions="Center"/>
                        <Entry Grid.Row="1" Grid.Column="1" x:Name="HPIVEntry" Keyboard="Numeric" TextChanged="OnHPIVChanged" MaxLength="2"/>
                        <Entry Grid.Row="1" Grid.Column="2" x:Name="HPEVEntry" Keyboard="Numeric" TextChanged="OnHPEVChanged" MaxLength="3"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Text="ATK:" VerticalOptions="Center"/>
                        <Entry Grid.Row="2" Grid.Column="1" x:Name="AttackIVEntry" Keyboard="Numeric" TextChanged="OnAttackIVChanged" MaxLength="2"/>
                        <Entry Grid.Row="2" Grid.Column="2" x:Name="AttackEVEntry" Keyboard="Numeric" TextChanged="OnAttackEVChanged" MaxLength="3"/>
                        
                        <Label Grid.Row="3" Grid.Column="0" Text="DEF:" VerticalOptions="Center"/>
                        <Entry Grid.Row="3" Grid.Column="1" x:Name="DefenseIVEntry" Keyboard="Numeric" TextChanged="OnDefenseIVChanged" MaxLength="2"/>
                        <Entry Grid.Row="3" Grid.Column="2" x:Name="DefenseEVEntry" Keyboard="Numeric" TextChanged="OnDefenseEVChanged" MaxLength="3"/>
                        
                        <Label Grid.Row="4" Grid.Column="0" Text="SpA:" VerticalOptions="Center"/>
                        <Entry Grid.Row="4" Grid.Column="1" x:Name="SpAttackIVEntry" Keyboard="Numeric" TextChanged="OnSpAttackIVChanged" MaxLength="2"/>
                        <Entry Grid.Row="4" Grid.Column="2" x:Name="SpAttackEVEntry" Keyboard="Numeric" TextChanged="OnSpAttackEVChanged" MaxLength="3"/>
                        
                        <Label Grid.Row="5" Grid.Column="0" Text="SpD:" VerticalOptions="Center"/>
                        <Entry Grid.Row="5" Grid.Column="1" x:Name="SpDefenseIVEntry" Keyboard="Numeric" TextChanged="OnSpDefenseIVChanged" MaxLength="2"/>
                        <Entry Grid.Row="5" Grid.Column="2" x:Name="SpDefenseEVEntry" Keyboard="Numeric" TextChanged="OnSpDefenseEVChanged" MaxLength="3"/>
                        
                        <Label Grid.Row="6" Grid.Column="0" Text="SPE:" VerticalOptions="Center"/>
                        <Entry Grid.Row="6" Grid.Column="1" x:Name="SpeedIVEntry" Keyboard="Numeric" TextChanged="OnSpeedIVChanged" MaxLength="2"/>
                        <Entry Grid.Row="6" Grid.Column="2" x:Name="SpeedEVEntry" Keyboard="Numeric" TextChanged="OnSpeedEVChanged" MaxLength="3"/>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- Moves -->
            <Frame BackgroundColor="LightCoral" Padding="10">
                <StackLayout>
                    <Label Text="Moves (IDs)" FontSize="16" FontAttributes="Bold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Text="Move 1 ID:" VerticalOptions="Center"/>
                        <Entry Grid.Row="0" Grid.Column="1" x:Name="Move1Entry" Keyboard="Numeric" TextChanged="OnMove1Changed"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Text="Move 2 ID:" VerticalOptions="Center"/>
                        <Entry Grid.Row="1" Grid.Column="1" x:Name="Move2Entry" Keyboard="Numeric" TextChanged="OnMove2Changed"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Text="Move 3 ID:" VerticalOptions="Center"/>
                        <Entry Grid.Row="2" Grid.Column="1" x:Name="Move3Entry" Keyboard="Numeric" TextChanged="OnMove3Changed"/>
                        
                        <Label Grid.Row="3" Grid.Column="0" Text="Move 4 ID:" VerticalOptions="Center"/>
                        <Entry Grid.Row="3" Grid.Column="1" x:Name="Move4Entry" Keyboard="Numeric" TextChanged="OnMove4Changed"/>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- Physical Properties -->
            <Frame BackgroundColor="LightPink" Padding="10">
                <StackLayout>
                    <Label Text="Physical &amp; Special Properties" FontSize="16" FontAttributes="Bold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Text="Gender (0=M, 1=F, 2=-):" VerticalOptions="Center"/>
                        <Entry Grid.Row="0" Grid.Column="1" x:Name="GenderEntry" Keyboard="Numeric" TextChanged="OnGenderChanged" MaxLength="1"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Text="Ability ID:" VerticalOptions="Center"/>
                        <Entry Grid.Row="1" Grid.Column="1" x:Name="AbilityEntry" Keyboard="Numeric" TextChanged="OnAbilityChanged"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Text="Form ID:" VerticalOptions="Center"/>
                        <Entry Grid.Row="2" Grid.Column="1" x:Name="FormEntry" Keyboard="Numeric" TextChanged="OnFormChanged"/>
                        
                        <Label Grid.Row="3" Grid.Column="0" Text="Ball ID:" VerticalOptions="Center"/>
                        <Entry Grid.Row="3" Grid.Column="1" x:Name="BallEntry" Keyboard="Numeric" TextChanged="OnBallChanged"/>
                        
                        <Label Grid.Row="4" Grid.Column="0" Text="Shiny:" VerticalOptions="Center"/>
                        <CheckBox Grid.Row="4" Grid.Column="1" x:Name="ShinyCheckBox" CheckedChanged="OnShinyChanged"/>
                        
                        <Label Grid.Row="5" Grid.Column="0" Text="Egg:" VerticalOptions="Center"/>
                        <CheckBox Grid.Row="5" Grid.Column="1" x:Name="EggCheckBox" CheckedChanged="OnEggChanged"/>
                        
                        <Label Grid.Row="6" Grid.Column="0" Text="Held Item ID:" VerticalOptions="Center"/>
                        <Entry Grid.Row="6" Grid.Column="1" x:Name="HeldItemEntry" Keyboard="Numeric" TextChanged="OnHeldItemChanged"/>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- Origin & Met Information -->
            <Frame BackgroundColor="LightCyan" Padding="10">
                <StackLayout>
                    <Label Text="Origin &amp; Met Information" FontSize="16" FontAttributes="Bold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Text="OT Name:" VerticalOptions="Center"/>
                        <Entry Grid.Row="0" Grid.Column="1" x:Name="OTNameEntry" TextChanged="OnOTNameChanged"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Text="OT Gender (0=M, 1=F):" VerticalOptions="Center"/>
                        <Entry Grid.Row="1" Grid.Column="1" x:Name="OTGenderEntry" Keyboard="Numeric" TextChanged="OnOTGenderChanged" MaxLength="1"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Text="TID16:" VerticalOptions="Center"/>
                        <Entry Grid.Row="2" Grid.Column="1" x:Name="TIDEntry" Keyboard="Numeric" TextChanged="OnTIDChanged"/>
                        
                        <Label Grid.Row="3" Grid.Column="0" Text="SID16:" VerticalOptions="Center"/>
                        <Entry Grid.Row="3" Grid.Column="1" x:Name="SIDEntry" Keyboard="Numeric" TextChanged="OnSIDChanged"/>
                        
                        <Label Grid.Row="4" Grid.Column="0" Text="Met Location ID:" VerticalOptions="Center"/>
                        <Entry Grid.Row="4" Grid.Column="1" x:Name="MetLocationEntry" Keyboard="Numeric" TextChanged="OnMetLocationChanged"/>
                        
                        <Label Grid.Row="5" Grid.Column="0" Text="Met Level:" VerticalOptions="Center"/>
                        <Entry Grid.Row="5" Grid.Column="1" x:Name="MetLevelEntry" Keyboard="Numeric" TextChanged="OnMetLevelChanged"/>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- Friendship & Language -->
            <Frame BackgroundColor="LightSalmon" Padding="10">
                <StackLayout>
                    <Label Text="Friendship &amp; Language" FontSize="16" FontAttributes="Bold"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Text="Friendship (0-255):" VerticalOptions="Center"/>
                        <Entry Grid.Row="0" Grid.Column="1" x:Name="FriendshipEntry" Keyboard="Numeric" TextChanged="OnFriendshipChanged"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Text="Language ID:" VerticalOptions="Center"/>
                        <Entry Grid.Row="1" Grid.Column="1" x:Name="LanguageEntry" Keyboard="Numeric" TextChanged="OnLanguageChanged"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Text="Version ID:" VerticalOptions="Center"/>
                        <Entry Grid.Row="2" Grid.Column="1" x:Name="VersionEntry" Keyboard="Numeric" TextChanged="OnVersionChanged"/>
                        
                        <Label Grid.Row="3" Grid.Column="0" Text="Fateful Encounter:" VerticalOptions="Center"/>
                        <CheckBox Grid.Row="3" Grid.Column="1" x:Name="FatefulCheckBox" CheckedChanged="OnFatefulChanged"/>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- Tools & Generation Info -->
            <Frame BackgroundColor="LightGray" Padding="10">
                <StackLayout>
                    <Label Text="Tools &amp; Generation Info" FontSize="16" FontAttributes="Bold"/>
                    <Label x:Name="GenerationLabel" Text="" FontSize="12" TextColor="Blue"/>
                    <Button Text="Heal Pokemon" Clicked="OnHealClicked" BackgroundColor="LightGreen"/>
                    <Button Text="Max IVs" Clicked="OnMaxIVsClicked" BackgroundColor="Orange"/>
                    <Button Text="Clear EVs" Clicked="OnClearEVsClicked" BackgroundColor="Red"/>
                    <Label x:Name="StatusLabel" Text="" FontSize="12" TextColor="Green"/>
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>

</ContentPage>