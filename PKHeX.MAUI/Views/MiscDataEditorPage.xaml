<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PKHeX.MAUI.Views.MiscDataEditorPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Misc Data Editor"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Label Grid.Row="0" 
               Text="Misc Data Editor" 
               FontSize="24" 
               FontAttributes="Bold" 
               HorizontalOptions="Center"/>

        <!-- Content -->
        <StackLayout Grid.Row="1" Spacing="20" VerticalOptions="Center">
            <Label x:Name="StatusLabel" Text="Misc Data Editor" HorizontalOptions="Center"/>
            <Label x:Name="InfoLabel" Text="Game options and settings" HorizontalOptions="Center"/>
            <Label Text="⚠️ Full misc data editor implementation coming soon" 
                   HorizontalOptions="Center" 
                   TextColor="Orange"/>
        </StackLayout>

        <!-- Footer -->
        <Button Grid.Row="2"
                Text="Back"
                BackgroundColor="{DynamicResource PrimaryColor}"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"
                Clicked="OnBackClicked"/>
    </Grid>
</ContentPage>
