<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PKHeX.MAUI.Views.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="PKHeX - Pokémon Save Editor"
             BackgroundColor="#F8F9FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Modern Header -->
        <Grid Grid.Row="0" BackgroundColor="#2C3E50" Padding="20,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackLayout Grid.Column="0" Orientation="Vertical">
                <Label Text="PKHeX" FontSize="24" FontAttributes="Bold" TextColor="White"/>
                <Label Text="Pokémon Save Editor for macOS" FontSize="14" TextColor="#BDC3C7"/>
            </StackLayout>
            
            <StackLayout Grid.Column="1" Orientation="Horizontal" Spacing="10">
                <Button x:Name="LoadSaveButton" Text="📁 Load Save" Clicked="OnLoadSaveClicked" 
                        BackgroundColor="#3498DB" TextColor="White" FontSize="14" FontAttributes="Bold" 
                        CornerRadius="8" Padding="15,10"/>
                <Button x:Name="SaveButton" Text="💾 Save File" Clicked="OnSaveChangesClicked" 
                        BackgroundColor="#27AE60" TextColor="White" FontSize="14" FontAttributes="Bold" 
                        CornerRadius="8" Padding="15,10" IsEnabled="False"/>
            </StackLayout>
        </Grid>

        <!-- Main Content with Modern Layout -->
        <ScrollView Grid.Row="1" Padding="25" VerticalScrollBarVisibility="Never">
            <StackLayout Spacing="25">
                
                <!-- Welcome Section -->
                <Frame BackgroundColor="White" CornerRadius="12" HasShadow="True" Padding="25">
                    <StackLayout Spacing="15">
                        <Label Text="Welcome to PKHeX" FontSize="26" FontAttributes="Bold" 
                               HorizontalOptions="Center" TextColor="#2C3E50"/>
                        <Label Text="Professional Pokémon save file editor, now native on macOS" 
                               FontSize="16" HorizontalOptions="Center" HorizontalTextAlignment="Center" 
                               TextColor="#7F8C8D" LineHeight="1.4"/>
                    </StackLayout>
                </Frame>

                <!-- Save File Status -->
                <Frame BackgroundColor="White" CornerRadius="12" HasShadow="True" Padding="20">
                    <StackLayout Spacing="12">
                        <Label Text="📄 Current Save File" FontSize="18" FontAttributes="Bold" TextColor="#2C3E50"/>
                        <Label x:Name="CurrentSaveLabel" Text="No save file loaded" TextColor="#7F8C8D" FontSize="14"/>
                        <Label x:Name="GameVersionLabel" Text="" TextColor="#7F8C8D" FontSize="14"/>
                        <Label x:Name="TrainerNameLabel" Text="" TextColor="#7F8C8D" FontSize="14"/>
                        <Label x:Name="TrainerIdLabel" Text="" TextColor="#7F8C8D" FontSize="14"/>
                        <Label x:Name="PlayTimeLabel" Text="" TextColor="#7F8C8D" FontSize="14"/>
                    </StackLayout>
                </Frame>

                <!-- Editor Tools -->
                <Frame BackgroundColor="White" CornerRadius="12" HasShadow="True" Padding="20">
                    <StackLayout Spacing="15">
                        <Label Text="🛠️ Editor Tools" FontSize="18" FontAttributes="Bold" TextColor="#2C3E50"/>
                        
                        <Grid ColumnSpacing="15" RowSpacing="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Button Grid.Row="0" Grid.Column="0" Text="🎒 Inventory Editor" x:Name="ItemEditorButton"
                                    Clicked="OnItemEditorClicked" 
                                    BackgroundColor="#9B59B6" TextColor="White" FontSize="16" FontAttributes="Bold" 
                                    CornerRadius="8" Padding="0,15"/>
                            
                            <Button Grid.Row="0" Grid.Column="1" Text="� Party Editor" x:Name="PartyEditorButton"
                                    Clicked="OnPartyEditorClicked" 
                                    BackgroundColor="#E74C3C" TextColor="White" FontSize="16" FontAttributes="Bold" 
                                    CornerRadius="8" Padding="0,15"/>
                            
                            <Button Grid.Row="1" Grid.Column="0" Text="� Box Editor" x:Name="BoxEditorButton"
                                    Clicked="OnBoxEditorClicked" 
                                    BackgroundColor="#F39C12" TextColor="White" FontSize="16" FontAttributes="Bold" 
                                    CornerRadius="8" Padding="0,15"/>
                            
                            <Button Grid.Row="1" Grid.Column="1" Text="🎮 Demo Mode" x:Name="DemoModeButton"
                                    Clicked="OnDemoModeClicked" 
                                    BackgroundColor="#16A085" TextColor="White" FontSize="16" FontAttributes="Bold" 
                                    CornerRadius="8" Padding="0,15"/>
                        </Grid>
                    </StackLayout>
                </Frame>

                <!-- Status Section -->
                <Frame BackgroundColor="White" CornerRadius="12" HasShadow="True" Padding="20">
                    <StackLayout Spacing="10">
                        <Label Text="📊 Status" FontSize="18" FontAttributes="Bold" TextColor="#2C3E50"/>
                        <Label x:Name="StatusLabel" Text="Ready to load save file..." TextColor="#7F8C8D" FontSize="14"/>
                    </StackLayout>
                </Frame>

            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
