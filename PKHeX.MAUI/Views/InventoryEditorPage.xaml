<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PKHeX.MAUI.Views.InventoryEditorPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Item Editor">

    <ScrollView>
        <StackLayout Padding="10" Spacing="10">
            
            <!-- Header -->
            <Grid BackgroundColor="LightGreen" Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" x:Name="BackButton" Text="â† Back" Clicked="OnBackClicked"/>
                <Label Grid.Column="1" x:Name="HeaderLabel" Text="Item Editor" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Button Grid.Column="2" x:Name="SaveButton" Text="Save" Clicked="OnSaveClicked" BackgroundColor="LightBlue"/>
            </Grid>

            <!-- Item Categories -->
            <Frame BackgroundColor="LightYellow" Padding="10">
                <StackLayout>
                    <Label Text="Item Categories" FontSize="16" FontAttributes="Bold"/>
                    <Picker x:Name="CategoryPicker" Title="Select Category" SelectedIndexChanged="OnCategoryChanged"/>
                </StackLayout>
            </Frame>

            <!-- Item List -->
            <Frame BackgroundColor="LightBlue" Padding="10">
                <StackLayout>
                    <Label Text="Items" FontSize="16" FontAttributes="Bold"/>
                    <CollectionView x:Name="ItemsCollectionView" ItemsSource="{Binding Items}" HeightRequest="400">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Label Grid.Column="0" Text="{Binding Name}" VerticalOptions="Center"/>
                                    <Entry Grid.Column="1" Text="{Binding Count}" Keyboard="Numeric" VerticalOptions="Center"/>
                                    <Button Grid.Column="2" Text="+" CommandParameter="{Binding .}" Clicked="OnIncrementItem" Margin="5,0"/>
                                    <Button Grid.Column="3" Text="-" CommandParameter="{Binding .}" Clicked="OnDecrementItem" Margin="5,0"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Frame>

            <!-- Quick Actions -->
            <Frame BackgroundColor="LightCoral" Padding="10">
                <StackLayout>
                    <Label Text="Quick Actions" FontSize="16" FontAttributes="Bold"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" Text="Max All Items" x:Name="MaxAllButton" Clicked="OnMaxAllClicked" BackgroundColor="Orange" Margin="0,0,5,0"/>
                        <Button Grid.Column="1" Text="Clear All Items" x:Name="ClearAllButton" Clicked="OnClearAllClicked" BackgroundColor="Red" TextColor="White" Margin="5,0,0,0"/>
                    </Grid>
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>

</ContentPage>
